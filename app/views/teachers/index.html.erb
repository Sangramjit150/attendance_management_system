<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Teachers</h1>
    <%= link_to "Add Teacher", new_teacher_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td><%= teacher.name %></td>
            <td><%= teacher.email %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to "Show", teacher_path(teacher), class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_teacher_path(teacher), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Destroy", teacher_path(teacher), data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "btn btn-sm btn-outline-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
