<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Departments</h1>
    <%= link_to "Add Department", new_department_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td><%= department.code %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to "Show", department, class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_department_path(department), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Destroy", department, data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "btn btn-sm btn-outline-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
