<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Subjects</h1>
    <%= link_to "Add Subject", new_subject_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Department</th>
          <th>Semester</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @subjects.each do |subject| %>
          <tr>
            <td><%= subject.name %></td>
            <td><%= subject.code %></td>
            <td><%= subject.department.name %></td>
            <td><%= subject.semester.name %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to "Show", subject, class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_subject_path(subject), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Destroy", subject, data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "btn btn-sm btn-outline-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
