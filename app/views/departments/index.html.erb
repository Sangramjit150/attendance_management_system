<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Departments</h1>
    <%= link_to "Add Department", new_department_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Code</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @departments.each do |department| %>
          <tr>
            <td><%= department.name %></td>
            <td><%= department.code %></td>
            <td>
              <div class="btn-group" role="group">
                <%= button_to "Show", department, class: "btn btn-sm btn-outline-primary me-1" %>
                <%= button_to "Edit", edit_department_path(department), class: "btn btn-sm btn-outline-secondary me-1" %>
                <%= button_to "Destroy", department, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger me-1" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
