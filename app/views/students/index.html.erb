<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Students</h1>
    <%= link_to "Add Student", new_student_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Roll Number</th>
          <th>Department</th>
          <th>Semester</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.roll_number %></td>
            <td><%= student.department.name %></td>
            <td><%= student.semester.name %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to "Show", student, class: "btn btn-sm btn-outline-primary" %>
                <%= link_to "Edit", edit_student_path(student), class: "btn btn-sm btn-outline-secondary" %>
                <%= link_to "Destroy", student, data: { turbo_confirm: "Are you sure?", turbo_method: :delete }, class: "btn btn-sm btn-outline-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
